<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

    <bean id="longId" class="com.epam.university.spring.core.util.IdGenerator"
          factory-method="getLongId" scope="prototype"/>
    <bean id="user" class="com.epam.university.spring.core.domain.User" scope="prototype"
          p:id-ref="longId"/>
    <bean id="event" class="com.epam.university.spring.core.domain.Event" scope="prototype"
          p:id-ref="longId"/>
    <bean id="auditorium" class="com.epam.university.spring.core.domain.Auditorium" scope="prototype"
          p:id-ref="longId"/>
    <bean id="eventShowing" class="com.epam.university.spring.core.domain.EventShowing" scope="prototype"
          p:id-ref="longId"/>
    <bean id="ticket" class="com.epam.university.spring.core.domain.Ticket" scope="prototype"
          p:id-ref="longId"/>
</beans>