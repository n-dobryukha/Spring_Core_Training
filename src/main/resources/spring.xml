<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userStorage" class="java.util.HashMap"/>
    <bean id="eventStorage" class="java.util.HashMap"/>
    <bean id="auditoriumStorage" class="java.util.HashMap"/>

    <bean id="userDao" class="com.epam.university.spring.core.dao.InMemoryStorage.UserDao">
        <constructor-arg ref = "userStorage"/>
    </bean>

    <bean id="userService" class="com.epam.university.spring.core.service.UserService">
        <constructor-arg ref = "userDao"/>
    </bean>

</beans>