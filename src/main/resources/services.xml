<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
	   					   http://www.springframework.org/schema/context
	   					   http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <context:annotation-config/>

    <import resource="InMemoryDao.xml"/>
    <import resource="discount.xml"/>

    <bean id="userService" class="com.epam.university.spring.core.service.UserService"/>
    <bean id="eventService" class="com.epam.university.spring.core.service.EventService"/>
    <bean id="auditoriumService" class="com.epam.university.spring.core.service.AuditoriumService"/>
    <bean id="discountService" class="com.epam.university.spring.core.service.DiscountService"/>
    <bean id="bookingService" class="com.epam.university.spring.core.service.BookingService"/>

</beans>